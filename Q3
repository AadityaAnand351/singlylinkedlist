#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node *head = NULL;

// Insert
void insertEnd(int x) {
    Node *newNode = new Node;
    newNode->data = x;
    newNode->next = NULL;

    if(head == NULL) {
        head = newNode;
        return;
    }

    Node *temp = head;
    while(temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
}

// Find middle of linked list
int findMiddle() {
    if(head == NULL) {
        cout << "List is empty.\n";
        return -1;
    }

    Node *slow = head;
    Node *fast = head;

    // slow mei ham ek ek krke aage badhenge and fast mei double, to jab fast last pohochega to slow middle mei reh jayegaa
    while(fast != NULL && fast->next != NULL) {
        slow = slow->next;
        fast = fast->next->next;
    }

    return slow->data; 
}

// Display list
void display() {
    Node *temp = head;
    cout << "List: ";
    while(temp != NULL) {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

int main() {
    int n, x;

    cout << "How many nodes? ";
    cin >> n;

    cout << "Enter values:\n";
    for(int i = 0; i < n; i++) {
        cin >> x;
        insertEnd(x);
    }

    display();

    int mid = findMiddle();
  
        cout << "Middle element = " << mid << endl;

    return 0;
}
