#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node *head = NULL;

void insertEnd(int x) {
    Node *newNode = new Node;
    newNode->data = x;
    newNode->next = NULL;

    if(head == NULL) {
        head = newNode;
        return;
    }

    Node *temp = head;
    while(temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}

// Count number of times key has come
int countKey(int key) {
    int count = 0;
    Node *temp = head;

    while(temp != NULL) {
        if(temp->data == key)
            count++;
        temp = temp->next;
    }
    return count;
}

// Delete all occurrences of key
void deleteAll(int key) {
    // First delete from the beginning as long as head has key
    while(head != NULL && head->data == key) {
        Node *temp = head;
        head = head->next;
        delete temp;
    }

    
    Node *curr = head;
    Node *prev = NULL;

    while(curr != NULL) {
        if(curr->data == key) {
            prev->next = curr->next;
            delete curr;
            curr = prev->next;
        } else {
            prev = curr;
            curr = curr->next;
        }
    }
}

// Display list
void display() {
    Node *temp = head;
    cout << "List: ";
    while(temp != NULL) {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

int main() {
    int n, x, key;

    cout << "How many nodes? ";
    cin >> n;

    cout << "Enter values:\n";
    for(int i = 0; i < n; i++) {
        cin >> x;
        insertEnd(x);
    }

    cout << "Enter key to count and delete: ";
    cin >> key;

    int c = countKey(key);
    cout << "Occurrences of " << key << " = " << c << endl;

    deleteAll(key);

    cout << "List after deleting all occurrences:\n";
    display();

    return 0;
}
