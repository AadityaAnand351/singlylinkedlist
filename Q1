#include <iostream>
using namespace std;

struct Node {
    int data;
    Node *next;
};

Node *head = NULL;

// Insertion at beginning
void insertBeg(int x) {
    Node *newNode = new Node;
    newNode->data = x;
    newNode->next = head;
    head = newNode;
}
// Insertion at end
void insertEnd(int x) {
    Node *newNode = new Node;
    newNode->data = x;
    newNode->next = NULL;
    if(head == NULL) {
        head = newNode;
        return;
    }
    Node *temp = head;
    while(temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
}

// Insert before/after a specific value
void insertBetween(int val, int x, int choice) {
    if(head == NULL) {
        cout << "List is empty.\n";
        return;
    }

    Node *newNode = new Node;
    newNode->data = x;

    Node *temp = head;
    Node *prev = NULL;

    while(temp != NULL && temp->data != val) {
        prev = temp;
        temp = temp->next;
    }

    if(temp == NULL) {
        cout << "Value not found.\n";
        return;
    }

    if(choice == 1) { // insert BEFORE
        if(temp == head) { // special case
            newNode->next = head;
            head = newNode;
        } else {
            newNode->next = temp;
            prev->next = newNode;
        }
    } 
    else { // insert AFTER
        newNode->next = temp->next;
        temp->next = newNode;
    }
}

// Delete from beginning
void deleteBeg() {
    if(head == NULL) {
        cout << "List is empty.\n";
        return;
    }
    Node *temp = head;
    head = head->next;
    delete temp;
    cout << "Deleted.\n";
}

// Delete from end
void deleteEnd() {
    if(head == NULL) {
        cout << "List is empty.\n";
        return;
    }

    if(head->next == NULL) {
        delete head;
        head = NULL;
        cout << "Deleted.\n";
        return;
    }

    Node *temp = head;
    Node *prev = NULL;

    while(temp->next != NULL) {
        prev = temp;
        temp = temp->next;
    }

    prev->next = NULL;
    delete temp;
    cout << "Deleted.\n";
}

// Delete a specific node
void deleteSpecific(int val) {
    if(head == NULL) {
        cout << "List is empty.\n";
        return;
    }

    Node *temp = head;
    Node *prev = NULL;

    while(temp != NULL && temp->data != val) {
        prev = temp;
        temp = temp->next;
    }

    if(temp == NULL) {
        cout << "Value not found.\n";
        return;
    }

    if(temp == head) {
        head = head->next;
    } else {
        prev->next = temp->next;
    }

    delete temp;
    cout << "Deleted.\n";
}

// Search a node
void searchNode(int val) {
    Node *temp = head;
    int pos = 1;

    while(temp != NULL) {
        if(temp->data == val) {
            cout << "Found at position " << pos << endl;
            return;
        }
        temp = temp->next;
        pos++;
    }
    cout << "Not found.\n";
}

// Display list
void display() {
    if(head == NULL) {
        cout << "List is empty.\n";
        return;
    }

    Node *temp = head;
    cout << "List: ";
    while(temp != NULL) {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

int main() {
    int choice, x, val, option;

    do {
        
        cout << "1. Insert at Beginning\n";
        cout << "2. Insert at End\n";
        cout << "3. Insert Before/After a Node\n";
        cout << "4. Delete from Beginning\n";
        cout << "5. Delete from End\n";
        cout << "6. Delete Specific Node\n";
        cout << "7. Search Node\n";
        cout << "8. Display List\n";
        cout << "9. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch(choice) {
            case 1:
                cout << "Enter value: ";
                cin >> x;
                insertBeg(x);
                break;

            case 2:
                cout << "Enter value: ";
                cin >> x;
                insertEnd(x);
                break;

            case 3:
                cout << "Enter value to insert: ";
                cin >> x;
                cout << "Insert before(1) or after(2)?: ";
                cin >> option;
                cout << "Insert relative to which value?: ";
                cin >> val;
                insertBetween(val, x, option);
                break;

            case 4:
                deleteBeg();
                break;

            case 5:
                deleteEnd();
                break;

            case 6:
                cout << "Enter value to delete: ";
                cin >> val;
                deleteSpecific(val);
                break;

            case 7:
                cout << "Enter value to search: ";
                cin >> val;
                searchNode(val);
                break;

            case 8:
                display();
                break;

            case 9:
                cout << "Exiting\n";
                break;

            default:
                cout << "Invalid choice.\n";
        }

    } while(choice != 9);

    return 0;
}
